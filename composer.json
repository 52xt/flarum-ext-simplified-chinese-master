{
    "name": "btitle/flarum-ext-simplified-chinese",
    "type": "flarum-extension",
    "description": "Simplified Chinese language pack.",
    "keywords": ["locale"],
    "license": "MIT",
    "require": {
        "flarum/core": "^0.1.0-beta.6"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "beta"
        },
        "flarum-extension": {
            "title": "Chinese",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#DE2910",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flarum-locale": {
            "code": "zh",
            "title": "简体中文"
        }
    }
}

